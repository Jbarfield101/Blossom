{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "blossom",
  "version": "0.1.8",
  "identifier": "com.owner.blossom",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "blossom",
        "width": 800,
        "height": 600,
        "decorations": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:stocks.db"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../public/sfz_sounds",
      "python/lofi",
      "python/ambience_generator.py",
      "python/bark_tts.py"
    ]
  }
}
