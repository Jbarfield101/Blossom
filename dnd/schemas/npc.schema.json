{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NPC",
  "type": "object",
  "required": ["id", "name", "tags"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "description": { "type": "string" },
    "stats": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    }
  },
  "additionalProperties": false
}
